<!DOCTYPE html>
<html>

<head>
    <title>VN News - Tờ báo điện tử nhiều người đọc nhất Việt Nam</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
    {{{_sections.css}}}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    {{!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script> --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>



</head>

<body style="background-color: #f0f1f4;">
    <!-- Header -->
    <form id="frmSignout" action="/account/logout" method="POST"></form>
    <div class="row header-logo " style="background-color: #f0f1f4;">
        <div class="col-xl-9 col-lg-12">
            <div class="row">
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-5 col-6">
                    <a href="/"><img class="logo" src="/img/logo.png" alt=""></a>
                </div>
                <!--chạy tin mới nhất-->
                <div class="col-xl-10 col-lg-12">
                    <div class="mt-4">
                        <marquee id="marq" scrollamount="5" direction="left" loop="50" scrolldelay="0" behavior="scroll"
                            onmouseover="this.stop()" onmouseout="this.start()">
                            {{{latesthtml}}}
                        </marquee>
                    </div>
                </div>
                <!--chạy tin mới nhất-->
            </div>
        </div>
        <div class="col-xl-3 col-lg-12" class="login-register-icons">
            <div class="row mt-4" style="display:flex; justify-content:flex-end;">
                {{#if isAuthenticated}}

                <div class="dropdown dropleft">
                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                        {{user.name}}
                    </button>
                    {{#if isAdmin}}
                    <div class="dropdown-menu " style="position: absolute; z-index: 2000">
                        <a class="dropdown-item" href="/account/profile/{{user.id}}">Thông tin cá nhân</a>
                        <a class="dropdown-item" href="/admin/manageCategories">Quản lí chuyên mục</a>
                        <a class="dropdown-item" href="/admin/manageTag">Quản lí tag</a>
                        <a class="dropdown-item" href="/admin/manageArticle">Quản lí bài viết</a>
                        <a class="dropdown-item" href="/admin/manageUser">Quản lí danh sách người dùng</a>
                        <a class="dropdown-item" href="javascript: $('#frmSignout').submit();">Logout</a>
                    </div>
                    {{else}}
                    {{#if isEditor}}
                    <div class="dropdown-menu " style="position: absolute; z-index: 2000">
                        <a class="dropdown-item" href="/account/profile/{{user.id}}">Thông tin cá nhân</a>
                        <a class="dropdown-item" href="/editor/manageArticle">Quản lí chuyên mục của mình</a>
                        <a class="dropdown-item" href="javascript: $('#frmSignout').submit();">Logout</a>
                    </div>
                    {{else}}
                    {{#if isWriter}}
                    <div class="dropdown-menu " style="position: absolute; z-index: 2000">
                        <a class="dropdown-item" href="/account/profile/{{user.id}}">Thông tin cá nhân</a>
                        <a class="dropdown-item" href="/writer/upload">Đăng bài viết mới</a>
                        <a class="dropdown-item" href="/writer/manageArticle">Danh sách bài viết</a>
                        <a class="dropdown-item" href="javascript: $('#frmSignout').submit();">Logout</a>
                    </div>
                    {{else}}
                    <div class="dropdown-menu " style="position: absolute; z-index: 2000">
                        <a class="dropdown-item" href="/account/profile/{{user.id}}">Profile</a>
                        <a class="dropdown-item" href="javascript: $('#frmSignout').submit();">Logout</a>
                    </div>
                    {{/if}}
                    {{/if}}
                    {{/if}}
                </div>
                {{else}}
                <div class="mr-3">
                    <a href="/account/login">
                        <button type="button" class="btn btn-success text-uppercase">
                            Đăng nhập
                            <span>
                                <img src="/img/dangnhap.png" alt="">
                            </span>
                        </button>
                    </a>
                </div>
                <div class="mr-1">
                    <a href="/account/register">
                        <button type="button" class="btn btn-success text-uppercase">
                            Đăng ký
                            <span>
                                <img src="/img/dangky.png" alt="">
                            </span>
                        </button>
                    </a>
                </div>
                {{/if}}

            </div>
        </div>
    </div>
    <!-- End header -->

    <!-- navigation bar -->
    <nav class="navbar navbar-expand-xl navbar-light bg-light sticky-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {{{navbar}}}
            </ul>
            <form class="form-inline my-2 my-lg-0" action="/search" method="GET">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" name="search"
                    aria-label="Search">
                <button type="submit" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <!-- end off navigation bar -->
    <!-- Content area -->

    {{{body}}}
    <!--end of Content -->

    <footer id="myFooter">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 myCols">
                    <h5>Get started</h5>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Sign up</a></li>
                        <li><a href="#">Downloads</a></li>
                    </ul>
                </div>
                <div class="col-sm-3 myCols">
                    <h5>About us</h5>
                    <ul>
                        <li><a href="#">Company Information</a></li>
                        <li><a href="#">Contact us</a></li>
                        <li><a href="#">Reviews</a></li>
                    </ul>
                </div>
                <div class="col-sm-3 myCols">
                    <h5>Support</h5>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Help desk</a></li>
                        <li><a href="#">Forums</a></li>
                    </ul>
                </div>
                <div class="col-sm-3 myCols">
                    <h5>Legal</h5>
                    <ul>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Terms of Use</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <p>© 2016 Copyright Text </p>
        </div>
    </footer>
    {{{_sections.js}}}
</body>

</html>